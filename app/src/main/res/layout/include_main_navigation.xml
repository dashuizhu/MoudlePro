<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_bottom"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_height"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_course"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableTop="@drawable/btn_navigation_course"
        android:gravity="center"
        android:paddingTop="@dimen/view_padding"
        android:background="@drawable/com_layout_selector"
        android:text="@string/title_course"
        android:textColor="@drawable/text_light2normal"
        android:textSize="@dimen/text_small_mini" />

    <TextView
        android:id="@+id/tv_work"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableTop="@drawable/btn_navigation_work"
        android:gravity="center"
        android:paddingTop="@dimen/view_padding"
        android:text="@string/title_work"
        android:background="@drawable/com_layout_selector"
        android:textColor="@drawable/text_light2normal"
        android:textSize="@dimen/text_small_mini" />

    <TextView
        android:id="@+id/tv_education"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableTop="@drawable/btn_navigation_education"
        android:gravity="center"
        android:paddingTop="@dimen/view_padding"
        android:text="@string/title_education"
        android:background="@drawable/com_layout_selector"
        android:textColor="@drawable/text_light2normal"
        android:textSize="@dimen/text_small_mini" />

    <TextView
        android:id="@+id/tv_my"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableTop="@drawable/btn_navigation_my"
        android:gravity="center"
        android:paddingTop="@dimen/view_padding"
        android:text="@string/title_my"
        android:background="@drawable/com_layout_selector"
        android:textColor="@drawable/text_light2normal"
        android:textSize="@dimen/text_small_mini" />


</LinearLayout>
