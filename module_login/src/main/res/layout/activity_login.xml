<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_all"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_label_login"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="49dp"
        android:textColor="@color/text_normal"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:layout_marginTop="41dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/login_default_map"/>

        <com.test.loginmoudle.ui.AutoEditTextView
            android:id="@+id/aet_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="62dp"
            app:mAutoMaxEms="11"
            app:mIsNumber="true"
            app:mAutoLeftDrawable="@mipmap/login_call"
            app:mAutoTextHintContent="请输入手机号"
            app:mAutoTextColor="@color/text_light_gray"
            app:mAutoTextHintColor="@color/text_light_gray"
            app:mAutoBackground="@drawable/com_bg_solid_hit_gray_radius_16"
            />


        <com.test.loginmoudle.ui.AutoEditTextView
            android:id="@+id/aet_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            app:mAutoLeftDrawable="@mipmap/login_password"
            app:mAutoTextHintContent="输入密码"
            app:mIsPassword="true"
            app:mAutoTextColor="@color/text_light_gray"
            app:mAutoTextHintColor="@color/text_light_gray"
            app:mAutoBackground="@drawable/com_bg_solid_hit_gray_radius_16"
            />


        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginTop="50dp"
            android:background="@drawable/com_bg_solid_light_orange_radius_16"
            android:text="@string/login_label_login"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text_big"
            style="?android:attr/borderlessButtonStyle" />

        <TextView
            android:id="@+id/tv_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/com_layout_selector_round"
            android:padding="@dimen/view_padding"
            android:layout_marginTop="24dp"
            android:text="@string/login_label_forget_password"
            android:textColor="@color/orange"
            android:textSize="@dimen/text_normal"/>
    </LinearLayout>


</LinearLayout>
